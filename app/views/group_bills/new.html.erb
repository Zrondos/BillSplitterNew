<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">


<div class="cameraPageContainer">
  
  <div class="uploadImageTitle"> Upload Bill </div>
  <div class="cameraIcon"> <i class="fas fa-camera fa-10x"></i> </div>

  <div class="uploadBillForm">
  <%# <%=current_user.id%> 
  <%= form_with model: @group_bill do |form| %>
    <div class="eventName"> <span>Event Name:</span>  <%=form.text_field :name%>
    <%= form.hidden_field :admin_id, value: current_user.id%> <br>
    <span class="receipt">Receipt: </span>  <%= form.file_field :receipt, id: "file_button"%> 
    </div>
    <div onclick="myreceipt()"> <%= form.submit "Analyze Receipt", :class => 'submitButton' %></div> 
    <%= image_tag 'loading.gif',id:"loading_button" %>
  <% end %>
  </div>

</div>
            




