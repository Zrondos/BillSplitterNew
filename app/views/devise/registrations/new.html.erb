<div id="login_page">    
  <div class="logo"><h2 class="logo_text">Split</h2></div>
      <br><br>
<div class="login_form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.text_field :first_name,  placeholder: "First name", class:"field-style" %>
      <br><br>

      <%= f.text_field :last_name,  placeholder: "Last name", class:"field-style" %>
      <br><br>

      <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: "Email address", class:"field-style" %>
      <br><br>

      <%= f.password_field :password, autocomplete: "new-password",  placeholder: "Password", class:"field-style" %>
        <% if @minimum_password_length %> <br><br>
        <% end %>
    <br><br>

      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password-confirmation", class:"field-style"  %>
      <br><br><br>
    </div>
    
      <%= f.submit "Sign up", class:"btn_x" %>
    
      <% end %>
      <br><br><br>
  
    <%= render "devise/shared/links" %>
 </div>

