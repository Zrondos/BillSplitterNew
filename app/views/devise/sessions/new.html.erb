
<div id="login_page">  
  <br>
    <div class="logo"><h2 class="logo_text">Split</h2></div>
  <br>
  
    <div class="login_form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email,  autofocus: true, autocomplete: "email", placeholder: "Email address", class:"field-style"  %>
            <p class="demo">Demo: test@test.com</p>
          </div>
        <br>
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"field-style" %>
            <p class="demo">Demo: password</p>
          </div>

        <br><br>
        <div class="new_session_container">

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div id="align-password"> <%= link_to "Forgot your password", new_password_path(resource_name), class:'forgot_password' %></div><br />
        <% end -%>

        
          <%= f.submit "Log in", class:"btn_x" %>
       
      <% end %>
      </div>
   

    <%= render "devise/shared/links" %>

  </div> 
</div>

</div> 












