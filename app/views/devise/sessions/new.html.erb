

<!--<h2>Log in</h2> -->
<div id="login_page">  
    
  <div class="login-text">SPLIT</div>  
       

    <div class="login_form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email,  autofocus: true, autocomplete: "email", placeholder: "Email address", class:"field-style"  %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"field-style" %>
          </div>

        

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div id="align-password"> <%= link_to "Forgot your password", new_password_path(resource_name) %></div><br />
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class:"login" %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>

  </div> 
</div> 












