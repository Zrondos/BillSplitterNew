<div id="profile-page"> 
    <div class="superContainer">
      <!-- Banner with logo -->
          <!-- nav conatiner with logo and menu icon -->
        <div class="profile">
          <h1 class="personName"> <%=@user.first_name.capitalize%> <%=@user.last_name.capitalize%> <br> </h1>

            <div class="profileImage"><ion-icon name="person" style="height:100px; width:100px; color:blue;"></ion-icon>   </div>
            <%= link_to 'Edit', edit_user_registration_path, class:"login" %>
            <div class="email"><%@user.email%></div>
        </div>
        <br>

        <div class="profile"><h2 style="align-text:center;"> My Bills</h2></div>
        <div class="payment">
        <%@user.bills.each do |bill| %>
            
          
            <div class="event_container">
              <p class="event_name"><%=bill.group_bill.name.capitalize%></p> <br>
                <%group_bill_total=bill.group_bill.total%>
                
                <% totalprice = 0%>
           <!-- item/receipt and price of item  -->
                <% bill.items.each do |item| %>
                  <%item.price/(item.bills.length) %>
                    <%itemsTotal= totalprice += item.price/(item.bills.length) %>
                      
                <%end %> 
                <%total_tax=bill.group_bill.tax%>
                <%total_tip=bill.group_bill.tip%> 
                <%my_percentage=totalprice/(bill.group_bill.total)%>
                <%i_pay=(totalprice*my_percentage)+(total_tax*my_percentage)+(total_tip*my_percentage)%>
                <%grand_total=totalprice+total_tax+total_tip%>
                <div class="check">  
                  <%if current_user.id==bill.group_bill.admin_id%>
                    <p>I paid $<%=sprintf("%.2f",i_pay.round(2))%> </p>
                  <% else %>
                    <p>I owe $<%=sprintf("%.2f",((totalprice)+(total_tax*my_percentage)+(total_tip*my_percentage)).round(2))%>
                    to <%=User.find(bill.group_bill.admin_id).first_name.capitalize%> </p>
                  <% end %>
                </div>
                <div class="my_bill_link">
                  <%= link_to 'View My Bill', bill_path(bill.id), class: "button_profile_container" %> 
                </div>
              </div>
          <%end%>
        </div>

